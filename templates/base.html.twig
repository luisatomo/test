<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<link rel="stylesheet" href="{{ asset('build/app.css') }}" />
<link rel="icon" type="image/png"  href="{{ asset('build/images/favicon.png') }}" />

    <title>Ebay Search</title>
    
  </head>
  <body>
<header>
    <h1>Ebay Search</h1>
</header>
<div class="main-content">
<div class="container">
{% if result %}
<p class="bg bg-warning">{{ result }}</p>
{% endif %}
 
 <form class="form" action="{{ path('ebay') }}">
 <label for="itemid">Item ID: </label>
 <input type="text" class="form-control" name="itemid" id="itemid"/>
 <button type="submit" class="btn btn-primary">Search...</button>
 </form>
 <h2>Previous Searches</h2>
  <table class="table">
<thead><th>Image</th><th>Item ID</th><th>Title</th><th>Seller</th><th>Price</th><th>Actions</th></thead>
  {% for pre in previousx %}
  <tr><td>{% if pre.image %}<img src="pre.image" class="img-responsive" />{% endif %}</td><td>{{ pre.itemid }}</td><td>{{ pre.title }}</td><td>{{ pre.seller }}</td>{{ pre.price }}<td></td><td><a href="{{ path('remove',{'id':pre.id}) }}">Remove</a></td></tr>
  {%  endfor %}
  </table>
</div>
</div>
<footer class="text-center">
</footer>
<script src="{{ asset('build/app.js') }}"></script>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>
