    <title>Libros</title>
    
  </head>
  <body>
<header>
    <h1>Libros</h1>
</header>
<div class="main-content">
<div class="container">
<nav>
<ul class="menu">
<li><a href="{{ path('front') }}">Libros</a></li>
<li><a href="{{ path('new') }}">Nuevo Libro</a></li>
</ul>
</nav>
{% if result %}
<p class="bg bg-warning">{{ result }}</p>
{% endif %}
 
 {% block content %}
<table class="table">
<thead><th>Titulo</th><th>Edicion</th></thead>
{% for libro in libros %}
<tr><td>{{ libro.titulo }}</td><td>{{libro.fecha|date('d/m/Y')}}</td></tr>
{% endfor %}
</table>
 {% endblock %}
</div>
</div>
<footer class="text-center">
</footer>
